{% extends 'layout.twig' %}

{% block body %}
<div class="post">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 c-brand-h">
        <h1 class="c-brand">{{ post.title }}</h1>
        {% if post.tags | length > 0 %}
        <ul class="list-inline">
          {% for tag in post.tags %}
          <li>
            <a class="tags__list-item-link" href="/blogs/{{ blog.permalink }}/tags/{{ tag.permalink }}">
              {{ tag.title }}
            </a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}

        {% if settings.enable_share_blog %}
        <div class="post__social-share text-center">
          {% include '_social-share.twig' %}
        </div>
        {% endif %}
      </div>
    </div>

    {% if post.image_url is not empty and post.image_url is defined %}
    <div class="row">
      <div class="text-center">
        <img src="{{  post.image_url }}?w=800" alt="{{ post.name | escape }}" class="blog__img">
      </div>
    </div>
    {% endif %}

    <div class="row pad">
      <div class="col-sm-12 col-md-8 col-md-offset-2 ">
        {{ post.content }}
      </div>
    </div>

  </div>
</div>
{% include "_blog-newsletter.twig" %}
{% endblock %}
