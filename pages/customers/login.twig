{% extends 'layout.twig' %}

{% block body %}
<div class="container page">
  <div class="row">
    <div class="col-xs-12 c-brand-h">
      <h1 class="c-brand upper">Iniciar sesión</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
    {% form 'customer_login' 'role="form" class="login-form"' %}
    <div class="form-group">
      <input type="email" class="form-control input-lg" id="email" name="email" placeholder="Correo electrónico" required>
    </div>
    <div class="form-group">
      <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Contraseña" required>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-lg btn-action">Iniciar sesión</button>
      ó <a href="/cuenta/registro">Crear cuenta</a>
    </div>
    <p>
      <a href="/cuenta/recuperar">¿Olvidaste tu contraseña?</a>
    </p>
    {% endform %}
    </div>
  </div>
</div>
{% endblock %}
